{{!< default}}

{{#post}}
<div class="text-6xl lato-style font-extrabold">
        {{title}}
    </div>
    <div class="text-xl lato-style font-light mt-2 mb-4">
        Posted by {{#primary_author}}<a href="{{url}}">{{name}}</a>{{/primary_author}} on <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}
    </div>

    {{#if feature_image}}<div><img class"object-contain md:object-scale-down" src="{{feature_image}}"></div>{{/if}}
    {{#if feature_image_caption}}<div class="text-base italic text-right image-caption mt-1 mb-4">{{feature_image_caption}}</div>{{/if}}

    <div class="text-2xl book-style font-medium mt-2 mb-6">
        {{content}}
    </div>
{{/post}}
